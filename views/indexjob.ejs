<% include partials/header1 %>

<div class="ui main text container">
    <div class="ui huge header">Available Jobs</div>
    
   <li><a class="ui orange basic button" href="/jobs/new">Create New Job</a></li> <br>
    <div class="ui top  attached segment">
        <div class="ui divided items">
            <% jobs.forEach(function(job){ %>
                <div class="item">
                    <div class="image">
                        <img class="ui centered rounded image" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRaxvSPe1JbRfQ3nqKSEBpU_CzKqJKS_pPgMO4WiPwUr5BbHLnf&s" >
                    </div>
                    <div class="content">
                         <a class="header" href="/jobs/<%= job._id %>"><%=job.title%></a>
                         <div class="meta">
                             <span><%= job.created.toDateString() %></span>
                         </div>
                         <div class="extra">
                             <a class="ui floated basic violet button" href="/jobs/<%= job._id %>">
                                 Read More
                                 <i class="right chevron icon"></i>
                             </a>
                         </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include partials/footer %>
