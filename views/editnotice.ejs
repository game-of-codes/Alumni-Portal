<% include partials/header1 %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= notice.title %></div>
    <form class="ui form" action="/notices/<%= notice._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="notice[title]" value="<%= notice.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="notice[image]" value="<%= notice.image %>">
        </div>
        <div class="field">
            <label>Notice Description</label>
            <textarea name="notice[body]"><%= notice.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<% include partials/footer %>
