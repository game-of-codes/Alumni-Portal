<% include partials/header1 %>

<div class="ui main text container">
    <div class="ui huge header">Available Notices</div>
    
   <li><a class="ui orange basic button" href="/notices/new">Create New Notice</a></li> <br>
    <div class="ui top  attached segment">
        <div class="ui divided items">
            <% notices.forEach(function(notice){ %>
                <div class="item">
                    <div class="image">
                        <img class="ui centered rounded image" src="https://spiderimg.amarujala.com/assets/images/2018/12/29/750x506/notice_1546053546.jpeg" >
                    </div>
                    <div class="content">
                         <a class="header" href="/notices/<%= notice._id %>"><%=notice.title%></a>
                         <div class="meta">
                             <span><%= notice.created.toDateString() %></span>
                         </div>
                         <div class="extra">
                             <a class="ui floated basic violet button" href="/notices/<%= notice._id %>">
                                 Read More
                                 <i class="right chevron icon"></i>
                             </a>
                         </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include partials/footer %>
